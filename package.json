{
  "name": "labrada-components",
  "version": "0.1.0",
  "private": false,
  "main": "./dist/labrada-components.umd.cjs",
  "module": "dist/labrada-components.js",
  "exports": {
    ".": {
      "import": "./dist/labrada-components.js",
      "require": "./dist/labrada-components.umd.cjs"
    }
  },
  "author": "Juan Labrada",
  "description": "Library of usefull Vue components",
  "file": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:style",
    "build:lib": "vite build",
    "build:style": "postcss assets/main.css -o dist/styles.css",
    "test:unit": "vitest --environment jsdom --root src/"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.9",
    "@heroicons/vue": "^2.0.14",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/test-utils": "^2.2.6",
    "autoprefixer": "^10.4.13",
    "jsdom": "^20.0.3",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.2.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.6"
  }
}
